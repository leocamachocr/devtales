---
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <!-- Estilos base comunes -->
    <link rel="stylesheet" href="/styles/base.css" />
    <!-- Estilos específicos para tales -->
    <link rel="stylesheet" href="/styles/tales.css" />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;600&display=swap" rel="stylesheet" />
  </head>
  <body class="tales-page">
<header>
      <div class="header-content">
        <h1>DevTales</h1>
        
        <!-- Botón hamburguesa -->
        <button class="menu-toggle" aria-label="Toggle menu" aria-expanded="false">
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
          <span class="hamburger-line"></span>
        </button>
        
        <!-- Navegación -->
        <nav class="nav-menu">
          <a href="/">Home</a>
          <a href="/posts">Posts</a>
          <a href="/tales">Tales</a>
          <a href="/tags">Tags</a>
          <a href="/about">About</a>
        </nav>
      </div>
    </header>

    <main>
      <slot />
    </main>

    <footer>
      &copy; 2025 Leonardo Camacho – Tales for devs.
    </footer>

    <!-- JavaScript del menú hamburguesa con defer para mejor rendimiento -->
    <script src="/js/hamburger-menu.js" defer></script>
</body>
</html>
