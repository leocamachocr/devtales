---
import Layout from './Layout.astro';

const { 
  title, 
  description,
  image,
  imageAlt,
  author = "Leonardo Camacho"
} = Astro.props;
---

<Layout 
  title={title}
  description={description}
  image={image}
  imageAlt={imageAlt}
  author={author}
  type="article"
>
  <div class="tales-page">
    <!-- Specific styles for tales -->
    <link rel="stylesheet" href="/devtales/styles/tales.css" slot="head" />
    
    <slot />
  </div>
</Layout>
